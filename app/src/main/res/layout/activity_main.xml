<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    style="@style/AppTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dustbitmap"
        android:orientation="vertical">

        <TextView
            android:id="@+id/numberField"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="#141211"
            android:textColor="#AAAAAA"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/resultField"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="#141211"
            android:textColor="#AAAAAA"
            android:textSize="40dp" />

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:columnCount="4"
            android:gravity="center"
            android:rowCount="5">

            <Button
                style="@style/ButtonStyle"
                android:onClick="bracketClick"
                android:text="(" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="bracketClick"
                android:text=")" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="clearOneClick"
                android:text="1/x" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="clearClick"
                android:text="C" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="numClick"
                android:text="7" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="numClick"
                android:text="8" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="numClick"
                android:text="9" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="opClick"
                android:text="+" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="numClick"
                android:text="4" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="numClick"
                android:text="5" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="numClick"
                android:text="6" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="opClick"
                android:text="-" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="numClick"
                android:text="1" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="numClick"
                android:text="2" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="numClick"
                android:text="3" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="opClick"
                android:text="*" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="calcClick"
                android:text="=" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="numClick"
                android:text="0" />

            <Button
                style="@style/ButtonStyle"
                android:onClick="pointClick"
                android:text="." />

            <Button
                style="@style/ButtonStyle"
                android:onClick="opClick"
                android:text="/" />
        </GridLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>